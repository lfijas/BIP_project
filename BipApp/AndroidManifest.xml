<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bipapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bipapp.MainActivity"
            android:label="@string/title_product_catalog"
            android:parentActivityName="com.example.bipapp.MenuActivity" >
        </activity>
        <activity
            android:name="com.example.bipapp.NutritionInfoActivity"
            android:label="@string/title_activity_nutrition_info" >
        </activity>
        <activity
            android:name="com.example.bipapp.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bipapp.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.example.bip.MenuActivity" >
        </activity>
        <activity
            android:name="com.example.bipapp.BrowsePurchaseHistoryActivity"
            android:label="@string/title_activity_browse_purchase_history"
            android:parentActivityName="com.example.bip.MenuActivity" >
        </activity>
        <activity
            android:name="com.example.bipapp.PurchaseSummaryActivity"
            android:label="@string/title_activity_purchase_summary" >
        </activity>
        <activity
            android:name="com.example.bipapp.CustomCategoryActivity"
            android:label="@string/title_activity_custom_category" >
        </activity>
    </application>

</manifest>
